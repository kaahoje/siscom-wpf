@using RestauranteMobile.Extensions
@model RestauranteMobile.Models.NovoPedidoModel
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("NovoPedido", "Pedido",null,FormMethod.Post,new{@autocomplete = "false"}))
{
    <div class="form-group" align="left">
        <br/>
        @Html.LabelFor(x=>x.Mesa)
        @Html.TextBoxFor(x=>x.Mesa, null, new { @type = "number" })
        @Html.ValidationSummary()
    </div>
    
    <div class="form-group">
        @Html.SubmitButton()
        @Html.ResetButton()
    </div>
    
}